{
  "license": "MIT",
  "private": true,
  "keywords": [
    "jest",
    "typescript",
    "angular",
    "testing"
  ],
  "scripts": {
    "prebuild": "rimraf src/build",
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest",
    "test:ci": "jest -i",
    "test:e2e": "node scripts/e2e.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1"
  },
  "devDependencies": {
    "@commitlint/cli": "9.x",
    "@commitlint/config-conventional": "9.x",
    "@types/jest": "26.x",
    "@types/node": "12.x",
    "conventional-changelog-cli": "2.x",
    "execa": "4.x",
    "husky": "4.x",
    "jest": "26.x",
    "lodash.memoize": "4.x",
    "ts-jest": "26.x",
    "typescript": "~3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "git reset"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json"
      }
    },
    "rootDir": "src/__tests__"
  },
  "engines": {
    "node": ">= 10"
  }
}
