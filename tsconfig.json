{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "removeComments": true,
    "lib": ["esnext"],
    "types": ["node"]
  }
}
